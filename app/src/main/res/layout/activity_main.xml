<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textv_hip"
        android:layout_width="200dp"
        android:layout_height="52dp"
        android:hint="Hipotenusa"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.39" />

    <EditText
        android:id="@+id/ladoA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="100dp"
        android:layout_marginTop="90dp"
        android:layout_marginBottom="40dp"
        android:ems="10"
        android:hint="Lado A"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/ladoB"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/ladoB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginBottom="185dp"
        android:ems="10"
        android:hint="Lado B"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/btn_calcular"
        app:layout_constraintStart_toStartOf="@+id/ladoA"
        app:layout_constraintTop_toBottomOf="@+id/ladoA" />

    <Button
        android:id="@+id/btn_calcular"
        android:layout_width="110dp"
        android:layout_height="64dp"
        android:layout_marginBottom="269dp"
        android:text="CALCULAR"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ladoB" />


</androidx.constraintlayout.widget.ConstraintLayout>